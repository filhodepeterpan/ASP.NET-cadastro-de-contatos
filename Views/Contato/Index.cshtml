@using CadastroDeContatos.Models

@model List<ContatoModel>

@{
    ViewData["Title"] = "Listagem de Contatos";
}

<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a role="button" class="btn btn-success d-flex align-items-center gap-1" asp-controller="Contato" asp-action="Criar">
            <ion-icon name="add-outline" size="large"></ion-icon>
            <span>Adicionar um novo contato</span>
        </a>
    </div>
    <br>  

    <h1 class="display-4">Listagem de Contatos</h1>
    <br>

    <div id="lista-de-contatos" class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Email</th>
                    <th scope="col">Celular</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @if(Model != null && Model.Any())
                {
                    foreach (ContatoModel contato in Model)
                    {
                        <tr>
                            <th scope="row">@contato.Id</th>
                            <td>@contato.Nome</td>
                            <td>@contato.Email</td>
                            <td>@contato.Celular</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a role="button" class="btn btn-primary d-flex align-items-center gap-1" asp-router-id="@contato.Id" asp-controller="Contato" asp-action="Editar">
                                        <ion-icon name="pencil-outline"></ion-icon>
                                        <span>Editar</span>
                                    </a>
                                    <a role="button" class="btn btn-danger d-flex align-items-center gap-1" asp-router-id="@contato.Id" asp-controller="Contato" asp-action="ApagarConfirmacao">
                                        <ion-icon name="trash-outline"></ion-icon>
                                        <span>Apagar</span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
