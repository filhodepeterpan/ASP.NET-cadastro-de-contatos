@using CadastroDeContatos.Models
@model ContatoModel

@{
    ViewData["Title"] = "Editar contato";
}

<div class="text-center">
    <h1 class="display-4">Editar contato</h1>
</div>

<form asp-controller="Contato" asp-action="Alterar" method="POST">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite seu nome">
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" asp-for="Email" class="form-control" aria-describedby="emailHelp" placeholder="Digite seu email">
        <small id="emailHelp" class="form-text text-muted">Nós nunca iremos compartilhar seu email com mais ninguém.</small>
    </div>
    <div class="form-group">
        <label for="celular">Celular</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Ex: 99 99999-9999">
    </div>
    <br>

    <div id="botoes" class="d-flex justify-content-md-start gap-2">
        <button type="submit" class="btn btn-primary d-flex align-items-center gap-1">
            <ion-icon name="create-sharp"></ion-icon>
            <span>Alterar</span>
        </button>
        <a role="button" class="btn btn-dark d-flex align-items-center gap-1" asp-controller="Contato" asp-action="index">
            <ion-icon name="arrow-back-outline"></ion-icon>
            <span>Voltar</span>
        </a>
    </div>
</form>